pipeline {
    agent any
    /*triggers {
        cron('* * * *')
    }*/
    parameters {
        string(name: 'Reqspace', defaultValue: '90', description: 'Required free storage space (%)', trim: true)
    }
    stages {
        stage('storage_test') {
            steps {
                script {
                    def FREESPACE = sh(
                        script: "df / | tail -1 | awk '{print \$4/\$2 * 100}'",
                        returnStdout: true
                    ).trim()

                    echo "Required space: ${params.Reqspace}%"
                    echo "Available space: ${FREESPACE}%"

                    // המרת מחרוזות לערכים מספריים והשוואה
                    if (FREESPACE.toFloat() < params.Reqspace.toFloat()) {
                        echo "Not enough free space! Required: ${params.Reqspace}%, Available: ${FREESPACE}%"
                        build job: '/Jenkinsfile_2', parameters: [
                        string(name: 'FileName', defaultValue: 'example.txt', description: 'File name to check', trim: true),
                        string(name: 'CoreDump', defaultValue: 'CoreDump', description: 'String to search in the file', trim: true)
                        ]
                    } else {
                        echo "Sufficient free space available."
                        //!skipRemainingStages
                    }
                }
            }
        }
    }
}